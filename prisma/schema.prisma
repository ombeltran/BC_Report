// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  // output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id          Int          @id @default(autoincrement())
  codEmployee Int          @unique
  name        String
  lastName    String
  password    String
  role        Role
  task        Production[] // Relation one to many
  labels      Labels[]     // Relation one to many
}

enum Role {
  master
  checker
  viewer
}

model Production {
  id       Int     @id @default(autoincrement())
  brand    String
  model    String
  seria_N  String
  category String
  note     String
  user     User    @relation(fields: [userId], references: [id])
  userId   Int // Foreing key
  createdAt DateTime @default(now())
}

model Labels {
  id       Int    @id @default(autoincrement())
  brand    String
  model    String
  seria_N  String 
  upc      String
  user     User   @relation(fields: [userId], references: [id])
  userId   Int // Foreing key
  qty     String
  submittedAt DateTime @default(now())
  complete Boolean @default(false)
  rejected Boolean @default(false)
}

model Brand {
  id      Int     @id @default(autoincrement())
  name    String  @unique
  myBrand Model[]
}

model Model {
  id    Int    @id @default(autoincrement())
  name  String @unique
  brand Brand  @relation(fields: [brandId], references: [id])
  brandId Int
}

model Category {
  id   Int    @id @default(autoincrement())
  name String @unique
}
